<html>

<head>
    <meta charset="UTF-8">
    <title>Books</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        a.disabled {
            pointer-events: none;
            cursor: default;
        }
    </style>
</head>

<body>
    <div class="container">

        <h1 style="text-align:center">Books</h1>

        <nav>
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link active" href="/books">All Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/books/add">Create Book</a>
                </li>
            </ul>
        </nav>

        {% if success %}
        <div class="alert alert-success mt-3" role="alert">
            {{ success }}
        </div>
        {% endif %}

        {% if error %}
        <div class="alert alert-danger mt-3" role="alert">
            {{ error }}
        </div>
        {% endif %}

        {% if books.length %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.author_name }}</td>
                    {% if book.price %}
                    <td>{{ book.price }} RON</td>
                    {% else %}
                    <td>N/A</td>
                    {% endif %}
                    <td>{{ book.year }}</td>

                    <td data-id="{{ book.id }}">
                        <a href="/books/{{ book.id }}/edit" class="btn btn-primary">Edit</a>
                        <a class="btn btn-danger deleteBook" data-id="{{ book.id }}" onclick="deleteBook('{{ book.id }}', event)">Delete</a>
                        <a href="/books/{{ book.id }}" class="btn btn-info">View</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <p>No books available.</p>
        {% endif %}

    </div>

    <script>
        function deleteBook(bookId, event) {
            event.preventDefault();
            if (confirm('Are you sure you want to delete this book?')) {
                fetch(`/books/${bookId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 200) {
                        alert(data.message);
                        window.location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete book');
                });
            }
        }
    </script>
</body>
</html>

